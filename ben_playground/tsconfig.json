{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "typeRoots": ["node_modules/@types", "typing"],
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["**/*.ts", "**/*.tsx", "node_modules/redux-persist/types", "pages/index.jsx", "redux/slices/.slice.sample.ts", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
